  <script>
    const projects=[
      {title:"Portfolio Website",desc:"Personal portfolio with blog & contact form.",tech:["HTML","CSS","JS"],img:"https://picsum.photos/800/400?random=11",demo:"#"},
      {title:"Task Manager",desc:"Full-stack task manager app with authentication & API.",tech:["React","Node.js"],img:"https://picsum.photos/800/400?random=12",demo:"#"},
      {title:"Open Source CLI",desc:"Developer tool published on npm to boost productivity.",tech:["Node.js"],img:"https://picsum.photos/800/400?random=13",demo:"#"}
    ];
    const posts=[
      {title:"Improving Web Performance",date:"July 2023",img:"https://picsum.photos/800/400?random=21",body:"This post explores key techniques for speeding up websites, including code splitting, caching, and lazy loading."},
      {title:"State Management in React",date:"June 2023",img:"https://picsum.photos/800/400?random=22",body:"A deep dive into managing complex state in React apps using Redux, Zustand, and Context API."},
      {title:"Design Systems for Scale",date:"May 2023",img:"https://picsum.photos/800/400?random=23",body:"Design systems help teams scale UI consistently. This article covers setup, tokens, and component libraries."}
    ];

    // Homepage population
    document.getElementById("projectsGrid").innerHTML=projects.map((p,i)=>`
      <div class="project fade" onclick="openProject(${i})">
        <img src="${p.img}" alt="${p.title}">
        <div class="badge">${p.tech.join(", ")}</div>
        <div class="project-content">
          <div class="title">${p.title}</div>
          <p>${p.desc}</p>
        </div>
      </div>`).join("");

    document.getElementById("postsArea").innerHTML=posts.map((p,i)=>`
      <div class="post fade" onclick="openPost(${i})">
        <img src="${p.img}" alt="${p.title}">
        <div class="post-content">
          <h3>${p.title}</h3>
          <div class="meta">${p.date}</div>
        </div>
      </div>`).join("");

    document.getElementById("year").textContent=new Date().getFullYear();

    function toggleMenu(){document.getElementById("navMenu").classList.toggle("show");}
    function openModal(type){alert("Modal would open here in a real app.");}
    function submitContact(e){e.preventDefault();alert("Message sent!");}

    // Detail views
    function openProject(index){
      const p=projects[index];
      document.getElementById("detailContent").innerHTML=`
        <h1>${p.title}</h1>
        <div class="muted">Tech: ${p.tech.map(t=>`<span class="skill">${t}</span>`).join(" ")}</div>
        <img src="${p.img}" alt="${p.title}" style="margin:16px 0;border-radius:12px;max-width:100%">
        <p class="lead">${p.desc}</p>
        <div style="margin-top:20px"><a href="${p.demo}" target="_blank" class="primary" style="padding:10px 14px;border-radius:8px">View Demo</a></div>
      `;
      showDetail(`/project/${index}`);
    }
    function openPost(index){
      const post=posts[index];
      document.getElementById("detailContent").innerHTML=`
        <h1>${post.title}</h1>
        <div class="meta">${post.date}</div>
        <img src="${post.img}" alt="${post.title}" style="margin:16px 0;border-radius:12px;max-width:100%">
        <p class="lead">${post.body}</p>
      `;
      showDetail(`/post/${index}`);
    }
    function showDetail(url){
      document.getElementById("homePage").style.display="none";
      document.getElementById("detailPage").style.display="block";
      document.getElementById("resumePage").style.display="none";
      window.scrollTo(0,0);
      history.pushState({page:"detail"}, "", url);
    }
    function goHome(){
      document.getElementById("homePage").style.display="block";
      document.getElementById("detailPage").style.display="none";
      document.getElementById("resumePage").style.display="none";
      window.scrollTo(0,0);
      history.pushState({page:"home"}, "", "/");
    }

    // Resume nav
    document.querySelector('a[href="#resume"]').addEventListener("click",function(e){
      e.preventDefault();
      document.getElementById("homePage").style.display="none";
      document.getElementById("detailPage").style.display="none";
      document.getElementById("resumePage").style.display="block";
      window.scrollTo(0,0);
      history.pushState({page:"resume"}, "", "/resume");
    });

    // Handle browser back/forward
    window.onpopstate=function(e){
      if(e.state && e.state.page==="detail"){
        document.getElementById("homePage").style.display="none";
        document.getElementById("detailPage").style.display="block";
        document.getElementById("resumePage").style.display="none";
      } else if(e.state && e.state.page==="resume"){
        document.getElementById("homePage").style.display="none";
        document.getElementById("detailPage").style.display="none";
        document.getElementById("resumePage").style.display="block";
      } else {
        goHome();
      }
    }

    // Scroll-to-top
    const scrollBtn=document.getElementById("scrollTopBtn");
    window.onscroll=()=>{scrollBtn.style.display=window.scrollY>300?"block":"none";}
    function scrollToTop(){window.scrollTo({top:0,behavior:"smooth"});}
  </script>
</body>
